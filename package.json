{
  "name": "dnd-assistant-server",
  "version": "0.1.0",
  "private": false,
  "description": "The server for dnd-assistant",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3nvi/dnd-assistant-server.git"
  },
  "keywords": [
    "dnd",
    "battle-helper"
  ],
  "author": "Aggelos-arvanitakis",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3nvi/dnd-assistant-server/issues"
  },
  "homepage": "https://github.com/3nvi/dnd-assistant-server#readme",
  "dependencies": {
    "@types/auth0": "^2.20.0",
    "@types/node": "^12.0.0",
    "apollo-server": "^2.9.15",
    "auth0": "^2.20.0",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "mongoose": "^5.8.4",
    "typescript": "~3.7.2",
    "yup": "^0.28.0"
  },
  "devDependencies": {
    "@types/mongoose": "^5.5.38",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "ts-node": "^8.5.4"
  },
  "scripts": {
    "start": "nodemon"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "printWidth": 100,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && tsc -p ."
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node --transpile-only -r dotenv/config src/index"
  }
}
